<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/style.css">
    <title>All Posts</title>
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <main>
        <h1>All Posts</h1>
        <% categories.forEach( (category) => { %>
            <h2><%= category %></h2>
            <% allBlogsByCategory[category].forEach( (blog) => { %>
                <div class="post">
                    <a href="/blogs/<%= blog._id %>"><%= blog.postTitle %></a>
                    <% if(blog.hasImg) { %>
                        <img src="<%= blog.imgLink %>">
                    <% } %>
                    <p><%= blog.message %></p>
                    <p><small><em>Posted by <%= blog.userName %></em></small></p>
                </div>
            <% }) %>
        <% }) %>
    </main>
</body>
</html>